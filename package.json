{
  "name": "ecommerce-with-kafka",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@4.4.0",
  "engines": {
    "node": "22.19.0"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx --env-file=.env src/index.ts",
    "dev:api": "APP_ROLE=api tsx --env-file=.env src/index.ts",
    "dev:workers": "APP_ROLE=workers MODULES_ENABLED=orders tsx --env-file=.env src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "topics:create": "bash scripts/create-kafka-topics.sh",
    "http:sync": "bash scripts/http-sync-demo.sh"
  },
  "dependencies": {
    "@koa/router": "^14.0.0",
    "@types/mongoose": "^5.11.97",
    "apisauce": "^3.2.1",
    "dotenv": "^17.2.3",
    "inversify": "^7.10.4",
    "kafkajs": "^2.2.4",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "koa2-swagger-ui": "^5.12.0",
    "mongoose": "^8.19.3",
    "openapi3-ts": "^4.5.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "reflect-metadata": "^0.2.2",
    "yamljs": "^0.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/koa": "^3.0.1",
    "@types/koa-bodyparser": "^4.3.13",
    "@types/koa__router": "^12.0.5",
    "@types/node": "^24.9.2",
    "@vitest/coverage-v8": "^4.0.5",
    "eslint": "^9.38.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.5"
  }
}
